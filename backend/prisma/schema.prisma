generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

// User model for Login and Permissions
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   @default("USER") // "USER" or "ADMIN"
  createdAt DateTime @default(now())
}

// Movie model for Dynamic Movie Cards
model Movie {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  posterUrl   String
  genre       String
  releaseYear Int
  createdAt   DateTime @default(now())
}